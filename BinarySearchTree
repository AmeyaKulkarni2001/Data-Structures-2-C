#include<iostream>
#include<string.h>
using namespace std;
class treenode
{
    char keyword [10]; char meaning [10];
	treenode *left;
	treenode *right;
	friend class tree;
	
};

class tree
{
	treenode *root;
	public:
		tree();
		void create_nr();
		void inorder_r();
        void inorder_r(treenode *);
};

tree::tree()
{
	root = NULL;
}

void tree::create_nr()
{
	treenode *temp,*curr;
	int flag;
	char ch1,ch2;
	
	if(root == NULL)
	{
		root = new treenode;
		root->left = NULL;
		root->right = NULL;
		
		cout <<"\nEnter Keyword:-";
		cin >>root->keyword;
		cout <<"\nEnter meaning:-";
		cin >>root->meaning;
		
	}
	do
	{
	    
		flag = 0;
		temp = root;
		
		curr = new treenode;
		curr->left = NULL;
		curr->right = NULL;
		
		cout<< "\nEnter Keyword:-";
		cin>>curr->keyword;
		cout<< "\nEnter meaning:-";
		cin>>curr->meaning;
		while(flag == 0)
		{
			if(temp->keyword>curr->keyword)
			{
				if(temp->left == NULL)
				{
					temp->left=curr;
					flag=1;
				}
				temp=temp->left;
			} 
			else 
			{
				if(temp->keyword < curr->keyword)
				{
					if(temp->right == NULL)
					{
						temp->right = curr;
						flag=1;
					}
					temp = temp->right;
				}
				
			}
		}
		cout<<"\nDo you continue(y/n):-";
		cin>>ch2;
		
	}while(ch2 == 'y'|| ch1 == 'Y');
}

void tree::inorder_r()
{
	inorder_r(root);
}

void tree::inorder_r(treenode *temp)
{
	if(temp != NULL)
	{
		inorder_r(temp->left);
        cout<<temp->keyword<<":"<<temp->meaning<<"->";
        inorder_r(temp->right);
	}
}


int main()
{
	tree bt;
    int option;
    do
    {
        cout<<"\n1.Create a Non-Recursive Tree";
        cout<<"\n2.Inorder Transveral";
        cout<<"\n3.Exit.";
        cout<<"\nEnter your choice: ";
        cin>>option;
        switch(option)
        {
            case 1:
                bt.create_nr();
                break;
                          
            case 2: 
                bt.inorder_r();
                break;
            
            case 3:
                return 0;
                
            default:
                cout<<"\nInvalid Choice!";
                break;
        }
    }
    while(option != 4);
}
